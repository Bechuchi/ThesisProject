@model ThesisProject.ViewModels.DetailsViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@if (Model.PdfType == "image")
{
    <img src="@Url.Action( "DisplayImage", "Modules", new { id = Model.FileId })" />

}
else
{
    <embed class="facts-details-container" src="@Url.Action( "BrowsePdf", "Modules", new { fileId = Model.FileId, pdfType = Model.PdfType } )" width="700" height="400" />
}

<br />
<br />

    <a style="color: #414244"
       asp-controller="Modules"
       asp-action="Download"
       asp-route-fileId="@Model.FileId"
       asp-route-pdfType="@Model.PdfType"
       asp-route-fileName="OliviaTest">@Localizer["link.download"]</a>

        

