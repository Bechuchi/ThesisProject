@model ThesisProject.ViewModels.ModuleViewModel

<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.ajax.unobtrusive/3.2.4/jquery.unobtrusive-ajax.min.js"></script>

<h2 style="font-weight: bold">@Model.Name</h2>
<h4 style="font-weight: bold">Facts: </h4>

<embed src="@Url.Action( "GetPDF", "Modules" )" width="750" height="600" />

@foreach (var facts in Model.Facts)
{
    <h4>
        <a asp-controller="Modules"
           asp-action="BrowsePdf"
           asp-route-pdfType="facts"
           asp-route-fileId="@facts.Id">@facts.Name</a>
    </h4>

    <a asp-controller="Modules"
       asp-action="Download"
       asp-route-fileId="@facts.Id"
       asp-route-pdfType="facts"
       asp-route-fileName="@facts.Name">Download</a>

    <br />
    <br />
}
